<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>

    <!--
      Temporarily disable nuget dependency constraint warning.
      Remove this once we've upgraded to Fantomas 4.6
    -->
    <NoWarn>NU1608</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <RuntimeHostConfigurationOption Include="System.Globalization.Invariant" Value="true" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Core.fs" />
    <Compile Include="Visitor.fs" />
    <Compile Include="Rewrite.fs" />
    <Compile Include="Testing.fs" />
    <Compile Include="Output.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="Fantomas" Version="4.5.11" />
    <PackageReference Include="Humanizer.Core" Version="2.13.14" />
    <PackageReference Include="FsUnit.xUnit" Version="4.0.7" />
  </ItemGroup>

</Project>
